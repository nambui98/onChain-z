  <ArticleHero content={content} />
  <ArticleMetadata content={content} />

  <div class="wrapper wrapper__readable">
    <div class="content">
      <slot />
    </div>
  </div>

  <footer class="text-center mt-6">
           <ButtonPrimary onClick={() => { }}>
                        View Relatedsssssss
                    </ButtonPrimary>
  </footer> -->
</BaseSEOLayout>

