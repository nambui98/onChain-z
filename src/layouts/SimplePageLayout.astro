---
import BaseSEOLayout from './BaseSEOLayout.astro'
let {
    lang,
    title,
    description,
    frontmatter,
    className = ''
} = Astro.props;

title = title || frontmatter?.title || 'Simple page layout'
---

<BaseSEOLayout lang={lang} title={title} description={description} className={className}>
    <div class="SimplePageLayout wrapper">
        <h1 class="heading1">{title}</h1>
        <slot />
    </div>
</BaseSEOLayout>