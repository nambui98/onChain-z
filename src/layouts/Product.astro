---
import ArticleHero from '../components/Article/ArticleHero.jsx'
import Button from '../components/Button/index.jsx'
import SimplePageLayout from '~/layouts/SimplePageLayout.astro'

const { content } = Astro.props
---

<SimplePageLayout lang={content.lang} title={content.title} description={content.description}>
  <ArticleHero content={content} />
  <div class="leadIn">
    <div class="wrapper pt8 pb8 mb8 tac">
      {content.tags.map((t) => <span class="tag">{t}</span>)}
      <h3 class="tagline">{content.description}</h3>
    </div>
  </div>
  <div class="wrapper wrapper__readable">
    <slot />
  </div>
  <footer class="tac mt6">
    <a href="/products">
      <Button>View All</Button>
    </a>
  </footer>
</SimplePageLayout>

<style lang="scss">
  .tag {
    margin-left: 0.5em;
    margin-right: 0.5em;
    text-transform: uppercase;

    &:nth-of-type(1n) {
      color: var(--c-green);
    }

    &:nth-of-type(2n) {
      color: var(--c-orange);
    }

    &:nth-of-type(3n) {
      color: var(--c-blue);
    }

    &:nth-of-type(4n) {
      color: var(--c-pink);
    }
  }
</style>
